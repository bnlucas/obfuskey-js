{
  "compilerOptions": {
    "target": "es2021",             /* Specify ECMAScript target version. 'es2021' supports BigInt natively. */
    "module": "nodenext",           /* Specify module code generation: 'commonjs', 'amd', 'esnext', etc. */
    "outDir": "./dist",             /* Redirect output structure to the directory. */
    "rootDir": "./src",             /* Specify the root directory of input files. */
    "strict": true,                 /* Enable all strict type-checking options. */
    "esModuleInterop": true,        /* Enables emit interoperability between CommonJS and ES Modules. */
    "skipLibCheck": true,           /* Skip type checking of declaration files. */
    "forceConsistentCasingInFileNames": true, /* Ensure that casing is consistent across all file paths. */
    "declaration": true,            /* Generate .d.ts files for compiled JavaScript. */
    "declarationMap": true,         /* Generate sourcemaps for .d.ts files. */
    "sourceMap": true,              /* Generates corresponding .map file. */
    "allowSyntheticDefaultImports": true, /* Allow default imports from modules with no default export. */
    "moduleResolution": "nodenext"
  },
  "include": [
    "src/**/*",                     /* Include all .ts files in the src directory and its subdirectories */
  ],
  "exclude": [
    "node_modules"                  /* Exclude node_modules */
  ]
}
